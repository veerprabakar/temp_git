
@{
    ViewBag.Title = "Index";
}

<h3>Notification Form Bulk Submission POC</h3>


@model IEnumerable<TelerikMvcApp1.Models.Form3A>

@(Html.Kendo().Grid(Model)
    .Name("Grid")
    .Columns(columns =>
    {
        columns.Bound(p => p.RepNumber).Title("Rep Number").Width(130);
        columns.Bound(p => p.RepName).Title("Rep Name").Width(130);
        columns.Bound(p => p.NRIC).Title("NRIC").Width(130);
        columns.Bound(p => p.Phone).Title("Phone").Width(130);
        columns.Bound(p => p.Email).Title("Email").Width(130);
        columns.Bound(p => p.Passport).Title("Passport").Width(130);
        columns.Command(command => command.Destroy()).Width(110);
    })
    .HtmlAttributes(new { style = "height: 550px;" })
    .Pageable(pageable => pageable
       .Input(true)
       .Numeric(false)
     ).ToolBar(toolbar =>
     {
         toolbar.Create();
     })
    .Editable(editable => editable.Mode(GridEditMode.InCell))
    .Scrollable(scr => scr.Height(430))
    .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(20)
        .ServerOperation(false)
        .Model(model => model.Id(p => p.Id))
     )
)


<script type="text/javascript">
    function error_handler(e) {
        if (e.errors) {
            var message = "Errors:\n";
            $.each(e.errors, function (key, value) {
                if ('errors' in value) {
                    $.each(value.errors, function() {
                        message += this + "\n";
                    });
                }
            });
            alert(message);
        }
    }



</script>
